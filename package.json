{
  "name": "coop-receipt-app",
  "version": "1.0.0",
  "description": "โปรแกรมออกใบเสร็จสหกรณ์โรงเรียน (Electron)",
  "main": "main.js",
  "author": "Kanista + ChatGPT",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist:mac": "electron-builder --mac dmg",
    "dist:win": "electron-builder --win nsis",
    "dist": "electron-builder -m -w"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "school.coop.receipt",
    "productName": "Coop Receipt",
    "files": [
      "app/**",
      "main.js",
      "preload.js",
      "assets/**"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.business",
      "target": ["dmg"],
      "icon": "assets/icon.png",
      "hardenedRuntime": false
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
